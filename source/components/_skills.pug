mixin skillHeader
	.name.column
	.value.column
	+label({label:"Trained", divObj:{class:"column"}, spanObj:{class:"column"}})
	+label({label:"Toolbox", divObj:{class:"column"}, spanObj:{class:"column"}})
	+label({label:"Workshop", divObj:{class:"column"}, spanObj:{class:"column"}})
	+label({label:"Modifier", divObj:{class:"column"}, spanObj:{class:"column"}})
	+label({label:"Trait", divObj:{class:"trait column"}, spanObj:{class:"column"}})

mixin skillRow (skill)
	- const skillName = skill.name;
	- const attributeShort = skill.attribute.substring(0,3); // first 3 chars
	- const display = attributeShort == "" ? skillName : `${skillName} (${attributeShort})`;
	.name
		//-'aria-level':3,
		+roller({name:skillName,
			role:'heading',
			'data-i18n':display,
			trigger:{triggeredFuncs:['rollSkill']}
			})

	.value.column
		//- easier to copy attribute mods here than to look them up later
		+input({
			name:`${skillName}_attribute_modifier`,
			type:'number',
			trigger:{formula:'@{skillAttribute}'}
			})
		//- a place to store the total roll bonus
		+input({
			name:skillName,
			type:'number',
			trigger:{calculation:'calcSkill'}
			})
	-
		const trigger = {affects: [skillName]};
	.column
		+checkbox({
			name:`${skillName}_trained`,
			value:1,
			class:'column',
			trigger
			})
	.column
		+checkbox({
			name:`${skillName}_toolbox`,
			value:1,
			class:'column',
			trigger
			})

	.column
		+checkbox({
			name:`${skillName}_workshop`,
			value:1,
			class:'column',
			trigger
			})

	+input({name:`${skillName}_modifier`,
		type:'number',
		trigger
		})
	+input({name:`${skillName}_trait`,
		type:'text',
		trigger
		}).trait
