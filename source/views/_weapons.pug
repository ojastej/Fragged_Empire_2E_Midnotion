section(data-i18n-aria-label="weapons")
	h2(data-i18n='weapons')
	+customControlFieldset({
		name:'weapons'
		})
		//- trigger:{triggeredFuncs:['removeTradeGoods']}
		.grid.weapon
			+label({label:'Weapon'})
			+label({label:'Skill'})
			+label({label:'Type'})
			+label({label:'d6'}).column
			+label({label:'Hit'}).column
			+label({label:'Rng'}).column
			+label({label:'End'}).column
			+label({label:'Crit'}).column
			+label({label:'Res'}).column

			.nowrap
				+roller({
					name:'roll',
					trigger:{triggeredFuncs:['rollAttack']}
					})
				+text({
					name:'weapon',
					'data-i18n-placeholder':'Weapon'
					})
			.select
				+select({name:'skill'})
					+option({value:'','data-i18n':'skill'})
					+option({'data-i18n':'small arms',value:'smallarms'})
					+option({'data-i18n':'heavy arms',value:'heavyarms'})
					+option({'data-i18n':'tactical',value:'tactical'})
					+option({'data-i18n':'exotic',value:'exotic'})
			.select
				+select({name:'type'})
					+option({value:'','data-i18n':'type'})
					+option({'data-i18n':'companion'})
					+option({'data-i18n':'gun'})
					+option({'data-i18n':'melee'})
					+option({'data-i18n':'shell'})
					+option({'data-i18n':'special'})
			+number({name:'hitDice'})
			+number({name:'hit'})
			+number({name:'range'})
			+number({name:'endurance_damage'})
			+number({name:'critical_damage'})
			+number({name:'resources'})
			+textarea({
				name:'features',
				'data-i18n-placeholder':'Features'
				}).span-9
